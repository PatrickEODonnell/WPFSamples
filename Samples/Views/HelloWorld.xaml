<UserControl x:Class="Samples.Views.HelloWorld"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Samples.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Name="ControlBorder" Margin="10" Padding="50" BorderBrush="#eee" BorderThickness="2" CornerRadius="20" MouseEnter="ControlBorder_MouseEnter" MouseLeave="ControlBorder_MouseLeave">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Hello World" FontSize="30" FontWeight="Bold" />
        </StackPanel>
    </Border>
</UserControl>
